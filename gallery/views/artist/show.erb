<h1>Artist: <%= @artist.name %></h1>

<h3>Exhibits:</h3>

<ul>
  <% @artist.exhibits.each do |exhibit| %>
  <li><%= exhibit.title() %></li>
  <% end %>
</ul>

<p><a href="/artist/<%= @artist.id %>/edit">Edit Artist</a></p>

<form method="post" action="/artist/<%= @artist.id %>/delete">
  <input type="submit" value="Delete Artist"/>
</form>
