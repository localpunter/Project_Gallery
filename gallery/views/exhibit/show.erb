<h1>Exhibit: <%= @exhibit.title %></h1>

<h2>Category: <%= @exhibit.category %></h2>

<h3>Artist: <% @exhibit.artist.each do |artist| %>
<%= artist.name() %>
<% end %></h3>

<form method="get" action="/exhibit/<%= @exhibit.id %>/edit">
  <input type="submit" value="Edit Exhibit"/>
</form>


<form method="post" action="/exhibit/<%= @exhibit.id %>/delete">
  <input type="submit" value="Delete Exhibit"/>
</form>
