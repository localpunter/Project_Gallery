<p>Please amend the fields below then click 'Edit Exhibit'</p>

<form method="post" action="/exhibit/<%= @exhibit.id %>">
  <label for="title">Title:</label>
  <input
  type="text"
  name="title"
  id="title"
  value="<%= @exhibit.title %>"
  />

  <label>
    Select a category:
    <select name="category_id" <%= @exhibit.category_id %>>
      <% for category in @categories %>
      <option <%= "selected" if @exhibit.category_id == category.id %> value="<%= category.id %>"><%= category.genre %></option>
      <% end %>
    </select>
  </label>

  <label>
    Select an artist:
    <select name="artist_id" <%= @exhibit.artist_id %>>
      <% for artist in @artists %>
      <option <%= "selected" if @exhibit.artist_id == artist.id %> value="<%= artist.id %>"><%= artist.name %></option>
      <% end %>
    </select>
  </label>

  <input type="submit" value="Edit Exhibit">
</form>
